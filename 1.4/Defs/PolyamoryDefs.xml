      <WorkToBuild>2100</WorkToBuild>
    </statBases>
    <size>(4,2)</size>
    <costStuffCount>175</costStuffCount>
  </ThingDef>

  <!-- Abstract Beds -->
  <ThingDef Name="PolyBedBase" ParentName="BasicBedBase" Abstract="True">
    <statBases>
      <BedRestEffectiveness>1</BedRestEffectiveness>
      <Comfort>0.75</Comfort>
    </statBases>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <leaveResourcesWhenKilled>True</leaveResourcesWhenKilled>
    <designationHotKey>Misc3</designationHotKey>
    <building>
      <paintable>true</paintable>
    </building>
    <uiOrder>2004</uiOrder>
  </ThingDef>
  
  <ThingDef Name="PolyBedBaseRoyal" ParentName="PolyBedBase" Abstract="True">
    <statBases>
      <BedRestEffectiveness>1.05</BedRestEffectiveness>
      <Comfort>0.90</Comfort>
    </statBases>
    <designationHotKey>Misc4</designationHotKey>
    <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
    <uiOrder>2006</uiOrder>
  </ThingDef>

  <!-- Regular Beds -->
  <ThingDef ParentName="PolyBedBase">
    <defName>TripleBed</defName>
    <label>triple bed</label>
    <description>A simple triple-wide bed that fits three people.</description>
    <graphicData>
      <texPath>Bed3/Bed3</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(3.05,2.05)</drawSize>
      <damageData>
        <rect>(0,0.05,3,1.95)</rect>
      </damageData>
    </graphicData>
    <statBases>
      <MaxHitPoints>260</MaxHitPoints>
      <Mass>70</Mass>
      <Beauty>3</Beauty>
      <WorkToBuild>2200</WorkToBuild>
    </statBases>
    <size>(3,2)</size>
    <costStuffCount>125</costStuffCount>
  </ThingDef>

